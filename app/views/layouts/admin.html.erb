<!DOCTYPE html>
<html>
<head>
  <title>GivCuz Admin</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
   <%= javascript_include_tag "admin" %>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag("admin") %>
  <%= stylesheet_link_tag("dashboard") %>
</head>
<body>
      <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand admin-logo" href="/">
            <!--GivCuz-->
            <%= image_tag('logo.png') %>
          </a>
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
          <% if user_signed_in? && (current_user.user_type == User::USER_ADMIN)  %>
          <span>Users</span>
          <ul class="nav nav-sidebar">
            <li><a href="/admin/users">List</a></li>
            <li><a href="/admin/new_user?method=new">New</a></li>
          </ul>
          <% end %>
          <% if user_signed_in? && (current_user.user_type == User::USER_ADMIN) %>
          <span>Business</span>
          <ul class="nav nav-sidebar">
            <li><a href="/admin/businesses">List</a></li>
            <li><a href="/admin/new_business?method=new">New</a></li>
          </ul>
          <% end %>
          <% if user_signed_in? && (current_user.user_type == User::USER_ADMIN) %>
          <span>Products</span>
          <ul class="nav nav-sidebar">
            <li><a href="/admin/products">List</a></li>
            <li><a href="/admin/new_product?method=new">New</a></li>
          </ul>
          <% end %>
          <% if user_signed_in? && (current_user.user_type == User::USER_ADMIN) %>
          <span>Categories</span>
          <ul class="nav nav-sidebar">
            <li><a href="/admin/categories">List</a></li>
            <li><a href="/admin/new_category?method=new">New</a></li>
          </ul>
          <% end %>
          <% if user_signed_in? && (current_user.user_type == User::USER_ADMIN) %>
          <span>Deals</span>
          <ul class="nav nav-sidebar">
            <li><a href="/admin/deals">List</a></li>
            <li><a href="/admin/new_deal?method=new">New</a></li>
          </ul>
          <% end %>
          <% if user_signed_in? && (current_user.user_type == User::USER_ADMIN) %>
          <span>NPO</span>
          <ul class="nav nav-sidebar">
            <li><a href="/admin/npos">List</a></li>
            <li><a href="/admin/new_npo?method=new">New</a></li>
          </ul>
          <% end %>
        </div>
          <%= yield %>
        </div>
    </div>
    </div>
</body>
</html>
