<!-- Main jumbotron for a primary marketing message or call to action -->
<style>
  .contact-form .form-group.error .form-control, .contact-form .form-group.error label, .contact-form .error .form-control {
  border-color: #ff0000;
  }
  #success{
    display:none;
    position: absolute;
    top: -48px;
    left: 0;
  }
</style>
<div id="wrapper">
  <%= render 'layouts/header' %>
  <!--Breadcrumb Section Start Here-->
  <div class="breadcrumb-section">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <h1>Forgot your password?</h1>
          <ul class="breadcrumb">
            <li>
              <a href="index.html">Home</a>
            </li>
            <li class="active">
              Sign Up
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <!--Breadcrumb Section End Here-->
  <div id="main">
    <div class="content-wrapper container" id="page-info">
      <div class="row">
        <div class="col-xs-12 col-sm-6 contact-form">
          
          <form id="sign_up_form" class="form-horizontal">
            <fieldset>

              <div class="row">
                <div class="col-xs-12">
                  <div class="form-group col-xs-12 col-sm-6">
                    <label for="inputEmail">Email</label>
                    <input type="text" class="form-control" name="email" id="inputEmail" placeholder="Email">
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-xs-12">
                  <div class="form-group col-xs-12 col-sm-6">
                    <label for="inputPassword">Password</label>
                    <input type="password" class="form-control" name="password" id="inputPassword" placeholder="password">
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-xs-12">
                  <div class="form-group col-xs-12 col-sm-6">
                    <label for="inputPassword">Password confirmation</label>
                    <input type="password" class="form-control" name="confirmation" id="inputPassword2" placeholder="confirmation">
                  </div>
                </div>
              </div>

              <input type="hidden" id="npo" name="npo" value="<%= @npo.id %>" />
              <input type="hidden" id="npo_code" name="npo_code" value="<%= @npo_code %>" />

              <div class="col-xs-12 form-group btns-wrapper">
                <button class="btn btn-default">Cancel</button>
                <button id="new-donor-button" type="button" class="btn btn-default">Submit</button>
              </div>

            </fieldset>
          </form>

          <div class="col-lg-12">
            <div class="alert alert-dismissable alert-success" style="display: none;">
              <button type="button" class="close" data-dismiss="alert">×</button>
              <strong>Registration Successful.</strong>
            </div>
            <div class="alert alert-dismissable alert-danger" style="display: none;">
              <button type="button" class="close" data-dismiss="alert">×</button>
              <strong>Error!</strong> Change a few things up and try submitting again.
            </div>
          </div>

        </div>

        <div class="col-lg-offset-1x col-md-offset-1 col-sm-offset-1 col-lg-4 col-md-4 col-sm-4">
          <%= render 'layouts/npo_detail' %>
        </div>
    </div>
</div>
