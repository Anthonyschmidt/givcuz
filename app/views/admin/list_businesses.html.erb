<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
<h2 class="sub-header">Businesses</h2>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Web</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @businesses.each do |b| %>
        <tr>
          <td><%= b.id %></td>
          <td><%= b.name %></td>
          <td><%= b.address %></td>
          <td><%= b.phone %></td>
          <td><%= b.email %></td>
          <td><%= b.web %></td>
          <td><a href="/admin/edit_business/<%= b.id %>" class="fa fa-pencil-square-o text-color-black"></a></td>
          <td>
            <a href="#" class="cursor-hand fa fa-times text-color-black delete type-business" id="#delete-item-<%= b.id %>" ></a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
